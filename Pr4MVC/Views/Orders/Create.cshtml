@model Pr4MVC.ViewModels.CreateOrderViewModel

@{
    ViewData["Title"] = "Nuevo Pedido";
}

<h2>Nuevo Pedido</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <p>Indica las cantidades para los productos que quieres comprar (solo se enviarán los que tengan cantidad &gt; 0).</p>

    <table class="table table-bordered align-middle">
        <thead>
            <tr>
                <th>Producto</th>
                <th class="text-end">Precio</th>
                <th class="text-center">Stock</th>
                <th class="text-center" style="width:160px">Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Items.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Items[i].Name
                        <input type="hidden" asp-for="Items[@i].ProductId" />
                        <input type="hidden" asp-for="Items[@i].Name" />
                        <input type="hidden" asp-for="Items[@i].Price" />
                        <input type="hidden" asp-for="Items[@i].Stock" />
                    </td>
                    <td class="text-end">@Model.Items[i].Price.ToString("0.00")</td>
                    <td class="text-center">@Model.Items[i].Stock</td>
                    <td class="text-center">
                        <input class="form-control text-center" asp-for="Items[@i].Quantity" min="0" />
                        <span asp-validation-for="Items[@i].Quantity" class="text-danger"></span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Confirmar pedido</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
