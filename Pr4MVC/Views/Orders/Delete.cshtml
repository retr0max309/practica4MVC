@model Pr4MVC.Models.Order

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<h2>Eliminar Pedido</h2>

<h4>¿Seguro que deseas eliminar este pedido?</h4>
<hr />

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.CustomerId</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Date.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total.ToString("0.00")</dd>
    </dl>
</div>

<h5>Productos del pedido</h5>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Producto</th>
            <th class="text-center">Cantidad</th>
            <th class="text-end">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td class="text-center">@item.Quantity</td>
                <td class="text-end">@item.Subtotal.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
