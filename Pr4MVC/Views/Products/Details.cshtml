@model Pr4MVC.Models.Product
@{
    ViewData["Title"] = "Detalle producto";
}
<h1>Detalle producto</h1>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Categoria</dt>
    <dd class="col-sm-10">@Model.Category</dd>

    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">@Model.Price</dd>

    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.Stock</dd>

    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
<a class="btn btn-secondary" asp-action="Index">Volver</a>
