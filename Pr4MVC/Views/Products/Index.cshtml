@model IEnumerable<Pr4MVC.Models.Product>
@{
    ViewData["Title"] = "Productos";
}
<h1>Productos</h1>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}

<form method="get" class="mb-3">
    <div class="input-group">
        <input name="q" class="form-control" placeholder="Buscar por nombre" value="@(Context.Request.Query["q"])" />
        <button class="btn btn-primary" type="submit">Buscar</button>
        <a class="btn btn-outline-secondary" asp-action="Index">Limpiar</a>
    </div>
</form>

<p>
    <a class="btn btn-success" asp-action="Create">Nuevo producto</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Name)</th>
            <th>@Html.DisplayNameFor(m => m.First().Category)</th>
            <th>@Html.DisplayNameFor(m => m.First().Price)</th>
            <th>@Html.DisplayNameFor(m => m.First().Stock)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
