@model Pr4MVC.Models.ApplicationUser

@{
    ViewData["Title"] = "Detalle de usuario";
    var roles = (System.Collections.Generic.IList<string>)ViewBag.Roles;
}

<h2>Usuario</h2>
<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@string.Join(", ", roles)</dd>
</dl>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
